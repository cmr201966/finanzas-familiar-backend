{
    "AccountsRequest": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "Nombre de la cuenta",
                "example": "Cuenta de prueba"
            },
            "type": {
                "type": "string",
                "description": "Tipo de cuenta",
                "example": "CUP"
            },
            "bank": {
                "type": "string",
                "description": "Banco de la cuenta",
                "example": "BPA"
            },
            "initial_balance": {
                "type": "number",
                "description": "Saldo inicial de la cuenta",
                "example": 1000
            },
            "user_id": {
                "type": "number",
                "description": "ID del usuario que crea la cuenta",
                "example": 1
            }
        },
        "required": [
            "name",
            "type",
            "bank",
            "initial_balance",
            "user_id"
        ]
    }
}