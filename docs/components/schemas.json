{
    "LoginInput": {
        "type": "object",
        "oneOf": [
            {
                "required": [
                    "email",
                    "password"
                ]
            },
            {
                "required": [
                    "phone",
                    "password"
                ]
            },
            {
                "required": [
                    "username",
                    "password"
                ]
            }
        ],
        "properties": {
            "email": {
                "type": "string",
                "format": "email"
            },
            "phone": {
                "type": "string"
            },
            "username": {
                "type": "string"
            },
            "password": {
                "type": "string",
                "format": "password"
            }
        },
        "description": "Solo uno de los siguientes campos debe estar presente junto con la contrase√±a: email, phone o username"
    },
    "RegisterInput": {
        "type": "object",
        "oneOf": [
            {
                "required": [
                    "email"
                ]
            },
            {
                "required": [
                    "phone"
                ]
            }
        ],
        "properties": {
            "name": {
                "type": "string"
            },
            "password": {
                "type": "string",
                "format": "password"
            },
            "email": {
                "type": "string",
                "format": "email"
            },
            "phone": {
                "type": "string"
            },
            "username": {
                "type": "string"
            }
        },
        "required": [
            "name",
            "password"
        ],
        "description": "Debes proporcionar solo uno entre: email o phone"
    },
    "ResponseSuccess": {
        "type": "object",
        "properties": {
            "message": {
                "type": "string"
            },
            "data": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "ResponseError": {
        "type": "object",
        "properties": {
            "message": {
                "type": "string"
            }
        }
    },
    "ExpenseInput": {
        "type": "object",
        "properties": {
            "concept": {
                "type": "string",
                "example": "Compra de materiales"
            },
            "amount": {
                "type": "number",
                "format": "float",
                "example": 150.75
            },
            "date": {
                "type": "string",
                "format": "date",
                "example": "2025-05-19"
            },
            "category": {
                "type": "string",
                "example": "Oficina"
            },
            "userId": {
                "type": "integer",
                "example": 3
            }
        },
        "required": [
            "concept",
            "amount",
            "date",
            "userId"
        ]
    }
}